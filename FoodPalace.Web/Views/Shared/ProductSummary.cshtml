@model FoodPalace.Infrastructure.Entities.Product



<div class="well">
    <h3>
        <strong>@Model.Name</strong>
        <span class="pull-right label label-primary">@("₦" + Model.Price.ToString()) </span>
    </h3>
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.ProductId)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Add to cart" />
        </div>
    }
    <td>
        <img style="width: 15%" src="/images/@Model.ImageUrl" alt="@Model.Description" />
    </td>
    <span></span>

    <span class="lead">@Model.Description</span>
    <span class="pull-right label label-info">@Model.Location</span>

</div>